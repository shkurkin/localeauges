<!-- main content -->
<table class="container" align="center"  border="0" cellpadding="0" cellspacing="0" width="600" bgcolor="ffffff">


<!--Header-->
<tbody>
<!-- end header -->


<!-- main section -->
<tr>
    <td>
        <table class="container-middle" align="center" border="0" cellpadding="0" cellspacing="0" width="560">


            <tr ><td height="7"></td></tr>


            <tr ><td height="20"></td></tr>

            <tr >
                <td>
                    <table class="mainContent" align="center" border="0" cellpadding="0" cellspacing="0" width="528">
                        <tbody><tr>
                            <td  class="main-header" style="color: #484848; font-size: 16px; font-weight: normal; font-family: Helvetica, Arial, sans-serif; text-align: center;">

                                <% @match.teams.order(:name).each_with_index do |team, i| %>
                                  <%= team.name %>
                                  <% if i != @match.teams.size - 1 %>
                                    VS
                                  <% end %>
                                <% end %>

                            </td>
                        </tr>

                        <tr><td height="20"></td></tr>
                        <tr>
                            <td  class="main-subheader" style="color: #a4a4a4; font-size: 12px; font-weight: normal; line-height:20px; font-family: Helvetica, Arial, sans-serif;">
                              <table style="text-align: center; width: 100%;">
                                <tr>
                                <% @match.teams.order(:name).each do |team| %>
                                  <td style="padding: 10px; width: 50%; vertial-align: top;">
                                    <span style="font-weight: bold; font-size: 16px; text-decoration: underline;"><%= team.name %></span><br />
                                    <% team.users.each do |user| %>
                                      <span>
                                        <% if !team.player_team %><%= user.name %> -<br><% end %>
                                        <a href="mailto:<%= user.email %>" style="text-decoration: none;"><%= user.email %></a>
                                      </span><br>
                                    <% end %>
                                  </td>
                                  <% end %>
                                </tr>
                              </table>
                            </td>
                        </tr>

                        <tr><td height="20"></td></tr>
                        <tr>
                            <td class="main-header" style="color: #484848; font-size: 14px; font-weight: normal; font-family: Helvetica, Arial, sans-serif; text-align: center;">
                              <%= @match.datetime.strftime("%A, %B #{@match.datetime.day.ordinalize} @ %l:%M %p") %>
                            </td>
                        </tr>

                        <tr><td height="20"></td></tr>
                        <tr>
                            <td  class="main-subheader" style="color: #a4a4a4; font-size: 12px; font-weight: normal; line-height:20px; font-family: Helvetica, Arial, sans-serif; text-align: center;">

                              <a href="https://www.google.com/maps/dir/Current+Location/<%= @location.address.gsub(' ','+')  %>/" target="_blank" style="text-decoration: none; color: #7087A3;"><img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @location.address.gsub(' ','+')  %>&zoom=15&scale=2&size=600x300&maptype=terrain&format=png&visual_refresh=true&markers=size:mid%7Ccolor:red%7C<%= @location.address.gsub(' ','+')  %>" alt="Google Map of <%= @location.address  %>" width="100%">
                                (click map for details/directions)
                              </a>
                            </td>
                        </tr>

                        </tbody></table>
                </td>
            </tr>

            <tr ><td height="25"></td></tr>


           </table>
    </td>
</tr>
<!-- end main section -->

</tbody></table>
<!--end main Content -->
